<main class="container-fluid h-100 py-4">
  <div class="row h-100">
    <div class="form-signin col-md-4 m-auto">
      <h2 class="mb-3">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-floating">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          <%= f.label :password, "Password #{"(" + @minimum_password_length.to_s + " characters minimum)"}" %>
        </div>

        <div class="field form-floating mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= f.label :password_confirmation, "Confirm new password" %><br />
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-primary w-100 my-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
