<main class="container-fluid h-100 py-4">
  <div class="row h-100">
    <div class="form-signin col-md-4 m-auto">
      <h2 class="mb-3">Sign In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          <%= f.label :email %>
        </div>

        <div class="field form-floating mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check mt-2">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "btn btn-primary w-100 my-3" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
